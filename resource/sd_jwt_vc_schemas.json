                                "svg_templates": {
                                    "type": "object",
                                    "properties": {
                                        "uri": {
                                            "type": "string",
                                            "format": "uri-reference"
                                        },
                                        "uri#integrity": {
                                            "type": "string"
                                        },
                                        "properties": {
                                            "type": "object",
                                            "properties": {
                                                "orientation": {
                                                    "type": "string"
                                                },
                                                "color_scheme": {
                                                    "type": "string"
                                                },
                                                "contrast": {
                                                    "type": "string"
